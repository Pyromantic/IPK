#pragma once


#include <string>

#include <sys/types.h>
#include <sys/socket.h>
#include <netinet/in.h>
#include <unistd.h>
#include <string.h>



class server_initializer {
public:
	server_initializer();
	virtual ~server_initializer();

	int binder(const unsigned short int);

private :
	static const char* socket_errors[];

	enum socket_errors {	// enums of socket errors
			ERROR_OPENING = 0,
			ERROR_BINDING = 1,
		};



};

