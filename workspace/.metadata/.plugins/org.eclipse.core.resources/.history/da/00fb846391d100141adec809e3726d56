#ifndef SERVER_LISTENER_H_
#define SERVER_LISTENER_H_

#include <string>

#include <sys/types.h>
#include <sys/socket.h>
#include <netinet/in.h>
#include <unistd.h>

#include <iostream>
#include <vector>

class host_handle {
public :
	server_listener();

	virtual ~server_listener();

	void inicializeServer(int);

private :

	void acceptHost();

	void getArguments();

	unsigned int getArgc();

	unsigned int getBufferSize();

	void getArgument();

	unsigned int listener;

	inline void nCheck (int n, int ERROR_TYPE) {
		if (n < 0) {
			close(socket);
			throw listener_errors[ERROR_TYPE];
		}
	}

	static const char* listener_errors[];

	enum listener_errors {	// enums of listener errors
		ACCEPT_ERROR = 0,
		READING_ERROR = 1,
		WRITING_ERROR = 2,
		TRANSMIT_ERROR = 3,
	};

};

#endif /* SERVERLISTENER_H_ */
