#pragma once

#include <string>

#include <sys/types.h>
#include <sys/socket.h>
#include <netinet/in.h>
#include <unistd.h>

#include <iostream>
#include <vector>


using namespace std;

class basic_communication {
public :
	basic_communication();

	virtual ~basic_communication();

private :

	/* variables */

	int hostSocket;		// host socket

	/*  methods | constants | enumerations */

	/* receiving methods */

	unsigned int getArgc();				// receive buffer size for argument from client

	string getString (unsigned int);	// receive single argument

	/* sender methods */

	void sendVector (vector<string>);

	void sendArgc(unsigned int);

	void sendString (string);

	/* check method */

	inline void nCheck (int n, int ERROR_TYPE) {
		if (n < 0) {
			close(hostSocket);
			throw listener_errors[ERROR_TYPE];
		}
	};

	/* constants */

	static const char* listener_errors[];

	/* enumerations */

	enum listener_errors {	// enumerations of listener errors
		ACCEPT_ERROR = 0,
		READING_ERROR = 1,
		WRITE_ERROR = 2,
		TRANSMIT_ERROR = 3,
	};

};
